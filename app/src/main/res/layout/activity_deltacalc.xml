<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.eric.kerbal.deltacalc">

    <EditText
        android:id="@+id/fulledit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Mass"
        android:inputType="numberDecimal"
        />
    <EditText
        android:id="@+id/dryedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dry Mass"
        android:inputType="numberDecimal"
        android:layout_below="@+id/fulledit"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/ispedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Engine ISP"
        android:inputType="numberDecimal"
        android:layout_below="@+id/dryedit"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="dvcalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATE"
        android:id="@+id/dvbutton"
        android:layout_below="@+id/ispedit"

        android:layout_centerHorizontal="true" />


</RelativeLayout>
